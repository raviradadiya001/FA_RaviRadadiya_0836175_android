<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Fragments.AddPlaceFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Places"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_margin="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_place_name"
        android:id="@+id/et_place"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/editbox_background_normal"
        tools:ignore="LabelFor" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_street_address"
        android:id="@+id/et_street"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/editbox_background_normal"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/city_and_street_name"
        android:id="@+id/et_citystate"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/editbox_background_normal"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/country_name"
        android:id="@+id/et_country"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/editbox_background_normal"/>

    <Button
        android:id="@+id/btnSaveLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/save_location"/>

</LinearLayout>
